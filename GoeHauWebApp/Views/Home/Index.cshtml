@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var UserId = HttpContextAccessor.HttpContext.Session.GetString("Id");
    var UserRole = HttpContextAccessor.HttpContext.Session.GetString("Role");
    int Id = int.Parse(UserId);
    int Role = int.Parse(UserRole);
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">

    <title>Home page</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">

    <!-- Google Web Font Embed -->
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,600,500,300,700' rel='stylesheet' type='text/css'>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/templatemo_main.css">
</head>
<body>
    <div id="main-wrapper">
        <div class="image-section">
            <div class="image-container">
                <img src="~/images/chuttersnap-sxhVoUrItmQ-unsplash.jpg" id="menu-img" class="main-img inactive">
            </div>
        </div>
        <div class="container">
            <div class="justify-content-center">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-md-offset-2 col-lg-offset-2 templatemo-content-wrapper">
                    <div class="templatemo-content">
                        <section id="menu-section" class="active">
                            <div class="row justify-content-center">
                                @if (Role == 1)
                                {
                                    <div class="col-xs-6 col-sm-2 col-md-2 col-lg-2 margin-bottom-20">
                                        <a href="../Warehouse/Index">
                                            <div class="black-bg btn-menu">
                                                <i class="fa fa-home"></i>
                                                <h2>Warehouses</h2>
                                            </div>
                                        </a>
                                    </div>
                                    <div class="col-xs-6 col-sm-2 col-md-2 col-lg-2 margin-bottom-20">
                                        <a href="../User/Index">
                                            <div class="black-bg btn-menu">
                                                <i class="fa fa-users"></i>
                                                <h2>Employees</h2>
                                            </div>
                                        </a>
                                    </div>
                                }
                                @if (Role <= 3)
                                {
                                    <div class="col-xs-6 col-sm-2 col-md-2 col-lg-2 margin-bottom-20">
                                        <a href="../Product/Index">
                                            <div class="black-bg btn-menu">
                                                <i class="fa fa-cubes"></i>
                                                <h2>Products</h2>
                                            </div>
                                        </a>
                                    </div>
                                    <div class="col-xs-6 col-sm-2 col-md-2 col-lg-2 margin-bottom-20">
                                        <a href="../Order/Index">
                                            <div class="black-bg btn-menu">
                                                <i class="fa fa-print"></i>
                                                <h2>Orders</h2>
                                            </div>
                                        </a>
                                    </div>
                                }                                                          
                                <div class="col-xs-6 col-sm-2 col-md-2 col-lg-2 margin-bottom-20">
                                    <a href="../Truck/Index">
                                        <div class="black-bg btn-menu">
                                            <i class="fa fa-truck"></i>
                                            <h2>Trucks</h2>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-xs-6 col-sm-2 col-md-2 col-lg-2 margin-bottom-20">                    
                                    <a href="Logout">
                                        <div class="black-bg btn-menu">
                                            <i class="fa fa-sign-out"></i>
                                            <h2>Sign out</h2>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </section><!-- /.menu-section -->
                    </div><!-- /.templatemo-content -->
                </div><!-- /.templatemo-content-wrapper -->
            </div>
        </div><!-- /.row -->

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 footer">
                <p class="footer-text">Copyright &copy; 2024 GoeHau Technology</p>
            </div><!-- /.footer -->
        </div>

    </div><!-- /#main-wrapper -->

    <div id="preloader">
        <div id="status">&nbsp;</div>
    </div><!-- /#preloader -->

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/jquery.backstretch.min.js"></script>
    <script src="~/js/templatemo_script.js"></script>

</body>
</html>
@model GoeHauWebApp.Models.Product

@{
    ViewData["Title"] = "Details";
    var InStock = ViewBag.InStocks as List<InStock>;
    var Warehouse = ViewBag.Warehouses as List<Warehouse>;
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class= "col-sm-2">
            Instock in Warehouse
        </dt>
        <dd class= "col-sm-10"></dd>
        @foreach (var item in InStock)
        {
            <dt class= "col-sm-2">
                @item?.Warehouse.Name
            </dt>
            <dd class= "col-sm-10">
                @item?.UnitInStock
            </dd>
        }
        
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
